.header {
  background-color: #fff;
  overflow: hidden;
}

.info-wrapper {
  display: flex;
  position: relative;
  height: 300rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.bg {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  filter: blur(30px);
}

.cover {
  position: absolute;
  left: 20rpx;
  top: 25rpx;
  z-index: 10;
  height: 250rpx;
  width: 200rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 2rpx 0 rgba(255, 255, 255, 0.4);
}

.info {
  position: absolute;
  top: 40rpx;
  left: 250rpx;
  bottom: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 26rpx;
  color: #f5f5f5;
}

.progress {
  position: absolute;
  right: 0;
  bottom: 30rpx;
  font-size: 20rpx;
  background-color: #9ac954;
  border-radius: 20rpx 0 0 20rpx;
  padding: 10rpx 16rpx;
  color: #fff;
  width: 200rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.btn-group {
  display: flex;
  margin-top: 4rpx;
}

.btn {
  border: 2rpx solid #f5f5f5;
  padding: 6rpx;
}

.btn:last-child {
  margin-left: 16rpx;
}

.desc {
  font-size: 26rpx;
  padding: 16rpx;
  line-height: 1.6;
  overflow: hidden;
}

.more {
  height: 36rpx;
  width: 36rpx;
  float: right;
  margin: -4rpx 25rpx 10rpx 0;
}

.chapters, .comment {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 0 20rpx;
}

.h3 {
  font-size: 30rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #e6e6e6;
}

.chapter {
  display: flex;
  flex-flow: column;
  align-items: center;
}

.cate {
  font-size: 28rpx;
  padding: 20rpx 20rpx 0;
}

.eps {
  width: 100%;
  font-size: 24rpx;
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx;
}

.ep {
  border: 2rpx solid #e6e6e6;
  text-align: center;
  width: 150rpx;
  margin: 13rpx;
  padding: 16rpx 10rpx;
  border-radius: 8rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  box-sizing: border-box;
}

.none {
  font-size: 28rpx;
  text-align: center;
  padding: 40rpx 0;
}

