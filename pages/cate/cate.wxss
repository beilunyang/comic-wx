.container {
  background-color: #fff;
}

.search-form {
  padding: 30rpx;
}

.search {
  font-size: 26rpx;
  border: 2rpx solid #ccc;
  margin: 0 30rpx;
  border-radius: 6rpx;
  padding: 0 20rpx;
  text-align: center;
  background-color: #f5f5f5;
}

.cate {
  padding: 0 30rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.cate-item {
  margin: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.cate-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.cate-title {
  font-size: 24rpx;
  margin-top: 12rpx;
}
